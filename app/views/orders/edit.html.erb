<%= form_for @order do |f| %>
  <div class=" pb-2 mb-3 pt-3">
    <div class="btn-toolbar mb-2 mb-md-0">
      <%= link_to orders_path, class: "btn btn-secondary mr-3" do %>
        <i class="fa fa-arrow-left"></i> Back
      <% end %>

      <%= button_tag( :class => "btn btn-primary") do %>
        <i class="fa fa-save"></i> Save
      <% end %>
    </div>
  </div>

  <% if @order.errors.any? %>
    <div class="alert alert-danger"><% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %></div>
  <% end %>

  <div class="form-group row">
    <%= f.label :id, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_field :id, class: "form-control", disabled: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :customer, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_field :customer, class: "form-control", value: "#{@order.customer_id} - #{@order.customer.email}", disabled: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :status, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.select :status, Order.statuses.keys.map {|key| [t("wine.#{key}"), key]}, {}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :shipping_address, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_field :shipping_address, class: "form-control", disabled: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :order_email, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_field :order_email, class: "form-control", disabled: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :created_at, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_field :created_at, class: "form-control", disabled: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :updated_at, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_field :updated_at, class: "form-control", disabled: true %>
    </div>
  </div>

<% end %>
